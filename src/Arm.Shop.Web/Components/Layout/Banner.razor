@using Arm.Shop.Core.DTOs
@using Arm.Shop.Core.Services
@inject IProductoService ProductoService

<!-- Start Banner Hero -->
<div id="template-mo-zay-hero-carousel" class="carousel slide" data-bs-ride="carousel">
    <ol class="carousel-indicators">
        @for (int i = 0; i < productos.Count; i++)
        {
            <li data-bs-target="#template-mo-zay-hero-carousel"
                data-bs-slide-to="@i"
                class="@(i == 0 ? "active" : "")"></li>
        }
    </ol>

    <div class="carousel-inner">
        @for (int i = 0; i < productos.Count; i++)
        {
            var prod = productos[i];
            <div class="carousel-item @(i == 0 ? "active" : "")">
                <div class="container">
                    <div class="row p-5">
                        <div class="mx-auto col-md-8 col-lg-6 order-lg-last">
                            <img class="img-fluid" src="@prod.ImagenUrl" alt="@prod.Nombre">
                        </div>
                        <div class="col-lg-6 mb-0 d-flex align-items-center">
                            <div class="text-align-left align-self-center">
                                <h1 class="h1 text-success">@prod.Nombre</h1>
                                <h3 class="h2">@prod.Precio.ToString("C", new System.Globalization.CultureInfo("es-AR"))</h3>
                                <p>@prod.Descripcion</p>
                                <a href="/producto/@prod.Id" class="btn btn-success mt-3">Ver producto</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <a class="carousel-control-prev text-decoration-none w-auto ps-3"
       href="#template-mo-zay-hero-carousel" role="button" data-bs-slide="prev">
        <i class="fas fa-chevron-left"></i>
    </a>
    <a class="carousel-control-next text-decoration-none w-auto pe-3"
       href="#template-mo-zay-hero-carousel" role="button" data-bs-slide="next">
        <i class="fas fa-chevron-right"></i>
    </a>
</div>
<!-- End Banner Hero -->
@code {
    private List<ProductoDestacadoDto> productos = new();

    protected override async Task OnInitializedAsync()
    {
        // Traemos 3 productos destacados (o más, según quieras)
        productos = await ProductoService.GetDestacadosAsync(3);
    }
}